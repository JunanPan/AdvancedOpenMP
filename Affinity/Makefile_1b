all:
	gcc -O2 affinity.c -o affinity.x -std=c99 -mfma -mavx -fopenmp

run:
	export OMP_PROC_BIND=false; \
	./affinity.x

run_true:
	export OMP_PLACES=threads; \
	export OMP_PROC_BIND=true; \
	./affinity.x

run_close:
	export OMP_PLACES=threads; \
	export OMP_PROC_BIND=close; \
	./affinity.x

run_spread:
	export OMP_PLACES=threads; \
	export OMP_PROC_BIND=spread; \
	./affinity.x

clean:
	rm -rf *~ *.x
